<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sikes.ProfileMenuController" alignment="CENTER" spacing="16" style="-fx-background-color: white; -fx-padding: 24; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, #888, 16, 0.2, 0, 2);">
    <children>
        <Label fx:id="userNameLabel" text="Username" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1976d2; -fx-padding: 0 0 10 0;" />
        <Button text="Ubah Password &amp; Gmail" styleClass="signin-button" onAction="#handleEditPassword" />
        <Button text="Ubah Nama &amp; Nomor Telepon" styleClass="signin-button" onAction="#handleEditProfile" />
        <Button text="Hubungi Kami" styleClass="signin-button" onAction="#handleContact" />
        <Button text="Tutup" styleClass="link-button" onAction="#handleClose" />
    </children>
</VBox> 