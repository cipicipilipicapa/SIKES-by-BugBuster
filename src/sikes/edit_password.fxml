<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sikes.EditPasswordController" alignment="CENTER" spacing="18" style="-fx-background-color: white; -fx-padding: 32;">
    <children>
        <Label text="Ubah Password &amp; Gmail" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #222;" />
        <Label text="Buat password/gmail baru. Pastikan berbeda dari sebelumnya untuk keamanan." style="-fx-font-size: 14px; -fx-text-fill: #888;" />
        <PasswordField fx:id="oldPasswordField" promptText="Password Lama" styleClass="input-field" />
        <PasswordField fx:id="newPasswordField" promptText="Password Baru" styleClass="input-field" />
        <PasswordField fx:id="confirmPasswordField" promptText="Konfirmasi Password Baru" styleClass="input-field" />
        <TextField fx:id="oldEmailField" promptText="Gmail Lama" styleClass="input-field" />
        <TextField fx:id="newEmailField" promptText="Gmail Baru" styleClass="input-field" />
        <TextField fx:id="confirmEmailField" promptText="Konfirmasi Gmail Baru" styleClass="input-field" />
        <Button fx:id="saveButton" text="Simpan perubahan" styleClass="signin-button" onAction="#handleSave" />
        <Label fx:id="errorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 13px;" visible="false" />
        <Button text="Kembali" styleClass="link-button" onAction="#handleBack" />
    </children>
</VBox> 