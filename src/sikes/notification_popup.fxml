<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sikes.NotificationPopupController"
      alignment="TOP_CENTER" spacing="0"
      minWidth="420" minHeight="600" prefWidth="420" prefHeight="600"
      style="-fx-background-color: white; -fx-background-radius: 32; -fx-padding: 0; -fx-effect: dropshadow(gaussian, #888, 16, 0.2, 0, 2);">
    <children>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 28 28 0 28;">
            <Button text="←" style="-fx-background-color: transparent; -fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #222; -fx-cursor: hand;" onAction="#handleClose" />
            <Label text="Notifikasi" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #111;" />
        </HBox>
        <!-- Notification List -->
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-padding: 0 0 0 0;" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
            minWidth="420" minHeight="520" prefWidth="420" prefHeight="520">
            <content>
                <VBox fx:id="notificationList" spacing="18" style="-fx-padding: 18 28 18 28;">
                    <!-- Notifikasi Card -->
                    <VBox spacing="6" style="-fx-background-color: white; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, #bbb, 6, 0.1, 0, 2); -fx-padding: 18 18 18 18;">
                        <HBox alignment="TOP_LEFT" spacing="10">
                            <VBox spacing="2">
                                <Label text="Dr. Sumanto" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #222;" />
                                <Label text="2 mins ago" style="-fx-font-size: 15px; -fx-text-fill: #888;" />
                            </VBox>
                            <Region HBox.hgrow="ALWAYS" />
                            <Button text="⋮" style="-fx-background-color: transparent; -fx-font-size: 22px; -fx-text-fill: #222; -fx-cursor: hand;" />
                        </HBox>
                        <Label text="sebaiknya langsung konsul ke rumah sakit terdekat" wrapText="true" style="-fx-font-size: 16px; -fx-text-fill: #222; -fx-padding: 8 0 0 0;" />
                    </VBox>
                    <!-- Tambahkan card notifikasi lain di sini -->
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox> 